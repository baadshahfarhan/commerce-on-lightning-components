<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Navigation Menu" type="String" name="navigationLinkSetDevName"/>
            <property label="Nav Item Spacing" name="navItemSpacing" type="String"  default="small" datasource="java://siteforce.communitybuilder.datasource.DxpSpacingSizeDataSource"/>
            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutComponent name="commerce_builder:navigationMenuItemListDesignInfo" />
                        <designLayoutProperty name="navigationLinkSetDevName" />
                    </designLayoutItems>
                </designSection>
                <designSection name="navigationStyles">
                    <designLayoutItems>
                        <designLayoutProperty name="navItemSpacing"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
