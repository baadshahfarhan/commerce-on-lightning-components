<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property type="String" name="navigationMenuEditor"/>
            <property type="String" name="alignment"
                      datasource="java://siteforce.communitybuilder.datasource.DxpFormAlignmentDataSource"
                      default="left"/>
            <property type="Boolean" name="showHomeLink" default="true"/>
            <property type="Boolean" name="showBackLabel" default="true"/>
            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutProperty name="navigationMenuEditor" />
                        <designLayoutProperty name="alignment"/>
                        <designLayoutProperty name="showHomeLink"/>
                        <designLayoutProperty name="showBackLabel"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
