<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="accountId" label="Account ID" type="String" default="" />
            <property name="noOrderMessageText" label="No Order Text" type="String" default="After you place an order, it appears here." translatable="true" />
            <property name="orderSummaryFieldMapping" label="Fields" type="String" default="[]" />

            <property name="ordersListCount" label="Number of Orders to Display" type="Integer" default="25" min="1" max="100" />
            <property name="numberOfMonthsForFilter" label="Default number of months" type="Integer" default="12" min="1" max="120" />
            <property name="showOrdersListSortBy" label="Show sort" type="Boolean" default="true" />
            <property name="showOrdersListFilter" label="Show filter" type="Boolean" default="true" />
            <property name="noResultsText" label="No Results Text" type="String" default="To view orders, adjust your filters." translatable="true" />
            <property name="viewMoreOrderBehaviour" label="Show More Orders Behavior" type="String" default="SHOW_MORE" datasource="java://siteforce.communitybuilder.datasource.B2BOrdersListViewMoreBehaviourDataSource" />
            <property name="showMoreLabel" label="Show More Orders Label" type="String" default="Show More" translatable="true" />

            <property name="showReorder" label="Show reorder button" type="Boolean" default="true" />
            <property name="reorderLabel" label="Reorder Button Text" type="String" default="Start Reorder" translatable="true" />
            <property name="showViewDetailsLink" label="Show view details link" type="Boolean" default="true" />
            <property name="viewDetailsLinkLabel" label="View Details Link Text" type="String" default="View Details" translatable="true" />

            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutProperty name="accountId" />
                        <designLayoutProperty name="noOrderMessageText" />
                        <designLayoutProperty name="orderSummaryFieldMapping" />
                    </designLayoutItems>
                </designSection>
                <designSection name="display">
                    <designLayoutItems>
                        <designLayoutProperty name="ordersListCount" />
                        <designLayoutProperty name="numberOfMonthsForFilter" />
                        <designLayoutProperty name="showOrdersListSortBy" />
                        <designLayoutProperty name="showOrdersListFilter" />
                        <designLayoutProperty name="noResultsText" />
                        <designLayoutProperty name="viewMoreOrderBehaviour" />
                        <designLayoutProperty name="showMoreLabel" />
                    </designLayoutItems>
                </designSection>
                <designSection name="actions">
                    <designLayoutItems>
                        <designLayoutProperty name="showReorder" />
                        <designLayoutProperty name="reorderLabel" cbVisibleIf="showReorder" />
                        <designLayoutProperty name="showViewDetailsLink" />
                        <designLayoutProperty name="viewDetailsLinkLabel" cbVisibleIf="showViewDetailsLink" />
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
