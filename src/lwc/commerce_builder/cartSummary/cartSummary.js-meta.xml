<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <designSubstitute>commerce_builder:cartSummaryDesignSubstitute</designSubstitute>
            <!-- Cart Summary -->
            <property name="backgroundColor" type="Color"/>

            <!-- Original Price -->
            <property name="showOriginalPrice" type="Boolean" default="true"/>
            <!-- The original text default color will eventually be linked to the dxp secondary color, when it's available in 244. 
                 For now it's using the color value specified by UX. -->
            <property name="originalTextColor" type="Color" default="rgb(116, 116, 116)"/>
            <property name="originalTextSize" type="String" default="small" datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource"/>

            <!-- Subtotal Price -->
            <property name="showSubtotalPrice" type="Boolean" default="true"/>
            <property name="subtotalTextColor" type="Color"/>
            <property name="subtotalTextSize" type="String" default="small" datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource"/>

            <!-- Discount Price -->
            <property name="showDiscountAmount" type="Boolean" default="true"/>
            <property name="discountAmountTextColor" type="Color"/>
            <property name="discountAmountTextSize" type="String" default="small" datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource"/>

            <!-- Shipping Price -->
            <property name="showShippingPrice" type="Boolean" default="true"/>
            <property name="shippingTextColor" type="Color"/>
            <property name="shippingTextSize" type="String" default="small" datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource"/>

            <!-- Tax Price -->
            <property name="showTaxPrice" type="Boolean" default="true"/>
            <property name="taxTextColor" type="Color"/>
            <property name="taxTextSize" type="String" default="small" datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource"/>

            <!-- Total Price -->
            <property name="totalTextColor" type="Color"/>
            <property name="totalTextSize" type="String" default="medium" datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource"/>

            <!-- Tax Included Label -->
            <property name="showTaxIncludedLabel" type="Boolean" default="false"/>

            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutComponent name="commerce_builder:cartSummaryDesignInfo" />
                        <designLayoutProperty name="showOriginalPrice"/>
                        <designLayoutProperty name="showSubtotalPrice"/>
                        <designLayoutProperty name="showDiscountAmount"/>
                        <designLayoutProperty name="showShippingPrice"/>
                        <designLayoutProperty name="showTaxPrice"/>
                        <designLayoutProperty name="showTaxIncludedLabel"/>
                    </designLayoutItems>
                </designSection>
                <designSection name="style">
                    <designLayoutItems>
                        <designLayoutProperty name="backgroundColor"/>
                        <designLayoutProperty name="originalTextColor" cbVisibleIf="showOriginalPrice"/>
                        <designLayoutProperty name="originalTextSize" cbVisibleIf="showOriginalPrice"/>
                        <designLayoutProperty name="subtotalTextColor" cbVisibleIf="showSubtotalPrice"/>
                        <designLayoutProperty name="subtotalTextSize" cbVisibleIf="showSubtotalPrice"/>
                        <designLayoutProperty name="discountAmountTextColor" cbVisibleIf="showDiscountAmount"/>
                        <designLayoutProperty name="discountAmountTextSize" cbVisibleIf="showDiscountAmount"/>
                        <designLayoutProperty name="shippingTextColor" cbVisibleIf="showShippingPrice"/>
                        <designLayoutProperty name="shippingTextSize" cbVisibleIf="showShippingPrice"/>
                        <designLayoutProperty name="taxTextColor" cbVisibleIf="showTaxPrice"/>
                        <designLayoutProperty name="taxTextSize" cbVisibleIf="showTaxPrice"/>
                        <designLayoutProperty name="totalTextColor"/>
                        <designLayoutProperty name="totalTextSize" />
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
