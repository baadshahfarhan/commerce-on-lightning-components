<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<isExposed>true</isExposed>
	<targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
	<targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="searchResults" type="String" default="{!Search.Results}"/>
            <property name="resultsLayout" type="String" default="grid" datasource="java://siteforce.communitybuilder.datasource.B2BSearchResultsPanelLayoutDataSource" />
            <property name="gridMaxColumnsDisplayed" type="String" default="3" datasource="1,2,3,4,5,6,7,8"/>
            <property name="gridColumnSpacing" type="String" default="large" datasource="java://siteforce.communitybuilder.datasource.SLDSSpacingDataSource" />
            <property name="gridRowSpacing" type="String" default="small" datasource="java://siteforce.communitybuilder.datasource.SLDSSpacingDataSource" />
            <property name="listRowSpacing" type="String" default="small" datasource="java://siteforce.communitybuilder.datasource.SLDSSpacingDataSource" />

            <property name="cardBackgroundColor" type="Color"/>
            <property name="cardBorderColor" type="Color"/>
            <property name="cardBorderRadius" type="String" default="1" datasource="1,2,3,4,5,6,7,8"/>
            <property name="cardAlignment" type="String" default="center" datasource="java://siteforce.communitybuilder.datasource.B2BSearchHorizontalAlignmentDataSource" />
            <property name="cardDividerColor" type="Color"/>
            <property name="showProductImage" type="Boolean" default="true"/>
            <property name="showNegotiatedPrice" type="Boolean" default="true"/>
            <property name="showOriginalPrice" type="Boolean" default="true"/>
            <property name="negotiatedPriceTextColor" type="Color"/>
            <property name="negotiatedPriceTextSize" type="String" default='medium' datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource"/>
            <property name="originalPriceTextColor" type="Color"/>
            <property name="originalPriceTextSize" type="String" default='medium' datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource"/>

            <!-- Card Content Mapping-->
            <property name="cardContentMapping" type="String" default='[{"name": "Name", "showLabel": false, "label": "Product Name", "fontSize": "medium"}]' />

            <!-- Call to Action Section -->
            <property name="showCallToActionButton" type="Boolean" default="false"/>
            <property name="addToCartButtonStyle" type="String" default='primary' datasource="java://siteforce.communitybuilder.datasource.ButtonStyleDataSource" />
            <property name="addToCartButtonText" type="String" translatable="true" default="Add to cart" />
            <property name="viewOptionsButtonText" type="String" translatable="true" default="View options" />


            <designLayout>
                <designSection name="layout">
                    <designLayoutItems>
                        <designLayoutProperty name="resultsLayout"/>
                        <designLayoutProperty name="gridMaxColumnsDisplayed" cbVisibleIf="resultsLayout=grid"/>
                        <designLayoutProperty name="gridColumnSpacing" cbVisibleIf="resultsLayout=grid"/>
                        <designLayoutProperty name="gridRowSpacing" cbVisibleIf="resultsLayout=grid"/>
                        <designLayoutProperty name="listRowSpacing" cbVisibleIf="resultsLayout=list"/>
                    </designLayoutItems>
                </designSection>
                <designSection name="results">
                    <designLayoutItems>
                        <designLayoutProperty name="cardBackgroundColor"/>
                        <designLayoutProperty name="cardBorderColor" cbVisibleIf="resultsLayout=grid"/>
                        <designLayoutProperty name="cardBorderRadius" cbVisibleIf="resultsLayout=grid"/>
                        <designLayoutProperty name="cardAlignment" cbVisibleIf="resultsLayout=grid"/>
                        <designLayoutProperty name="cardDividerColor" cbVisibleIf="resultsLayout=list"/>
                        <designLayoutProperty name="showProductImage" />
                        <designLayoutProperty name="cardContentMapping" />
                        <designLayoutProperty name="showNegotiatedPrice" />
                        <designLayoutProperty name="negotiatedPriceTextSize" cbVisibleIf="showNegotiatedPrice"/>
                        <designLayoutProperty name="negotiatedPriceTextColor" cbVisibleIf="showNegotiatedPrice"/>
                        <designLayoutProperty name="showOriginalPrice" />
                        <designLayoutProperty name="originalPriceTextSize" cbVisibleIf="showOriginalPrice"/>
                        <designLayoutProperty name="originalPriceTextColor" cbVisibleIf="showOriginalPrice"/>
                        <designLayoutProperty name="showCallToActionButton"/>
                        <designLayoutProperty name="addToCartButtonStyle" cbVisibleIf="showCallToActionButton"/>
                        <designLayoutProperty name="addToCartButtonText" cbVisibleIf="showCallToActionButton"/>
                        <designLayoutProperty name="viewOptionsButtonText" cbVisibleIf="showCallToActionButton"/>
                        <designLayoutProperty name="searchResults"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
