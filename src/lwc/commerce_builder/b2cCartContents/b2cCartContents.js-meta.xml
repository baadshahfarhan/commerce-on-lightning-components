<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
	<targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
	<targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="items" type="string" default="{!Cart.Items}"/>
            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutComponent name="commerce_builder:b2cCartContentsDesignInfo" />
                        <designLayoutProperty name="items" cbVisibleIf="false" />
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
