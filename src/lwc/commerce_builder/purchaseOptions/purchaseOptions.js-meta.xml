<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Product Data Binding" name="product" type="String" default="{!Product.Details}"/>
            <property label="Product Variant Selection Data Binding" name="productVariant" type="String" default="{!Product.SelectedVariant}"/>

            <!-- Add to Cart Button -->
            <property label="Add to Cart Button Background Color" name="addToCartButtonBackgroundColor" type="Color" />
            <property label="Add to Cart Button Background Hover Color" name="addToCartButtonBackgroundHoverColor" type="Color" />
            <property label="Add to Cart Button Border Color" name="addToCartButtonBorderColor" type="Color" />
            <property label="Add to Cart Button Border Radius" name="addToCartButtonBorderRadius" type="Integer" min="0" max="50" default="0" />
            <property label="Add to Cart Button Text" name="addToCartButtonText" type="String" translatable="true" default="Add To Cart" />
            <property label="Add to Cart Button Text Color" name="addToCartButtonTextColor" type="Color" />
            <property label="Add to Cart Button Text Hover Color" name="addToCartButtonTextHoverColor" type="Color" />

            <!-- Quantity Selector & Product Quantity Rules -->
            <property label="Quantity Selector Label" name="quantitySelectorLabel" type="String" translatable="true" default="QTY" />
            <property label="Minimum Text" name="minimumValueGuideText" type="String" translatable="true" default="Minimum quantity is {0}" />
            <property label="Maximum Text" name="maximumValueGuideText" type="String" translatable="true" default="Maximum quantity is {0}" />
            <property label="Increment Text" name="incrementValueGuideText" type="String" translatable="true" default="Increment quantity is {0}" />


            <designLayout>
                <designSection name="addToCart">
                    <designLayoutItems>
                        <designLayoutProperty name="addToCartButtonText"/>
                        <designLayoutProperty name="addToCartButtonTextColor"/>
                        <designLayoutProperty name="addToCartButtonTextHoverColor"/>
                        <designLayoutProperty name="addToCartButtonBackgroundColor"/>
                        <designLayoutProperty name="addToCartButtonBackgroundHoverColor"/>
                        <designLayoutProperty name="addToCartButtonBorderColor"/>
                        <designLayoutProperty name="addToCartButtonBorderRadius"/>
                    </designLayoutItems>
                </designSection>

                <designSection name="quantitySelector">
                    <designLayoutItems>
                        <designLayoutProperty name="minimumValueGuideText"/>
                        <designLayoutProperty name="maximumValueGuideText"/>
                        <designLayoutProperty name="incrementValueGuideText"/>
                        <designLayoutProperty name="quantitySelectorLabel"/>
                    </designLayoutItems>
                </designSection>

                <designSection>
                    <designLayoutItems>
                        <designLayoutProperty name="product"/>
                        <designLayoutProperty name="productVariant"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
