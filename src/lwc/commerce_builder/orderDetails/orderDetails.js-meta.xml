<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Order Summary Details</masterLabel>
	<targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
            <orgAccess>OrderManagement.orgHasOrderSummaryEnabled</orgAccess>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="orderSummaryId" type="String" default="{!recordId}"/>
            <property name="highlightsTitle" translatable="true" type="String"  default="Details"/>
            <property name="highlightsCardBackgroundColor" type="Color"/>
            <property name="highlightsCardBorderColor" type="Color"/>
            <property name="highlightsCardTextColor" type="Color"/>
            <property name="highlightsCardBorderRadius" type="Integer" min="0" max="20" default="0"/>
            <property name="orderSummaryHighlightsFieldMapping" type="String" translatable="true"/>

            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutProperty name="orderSummaryId"/>
                        <designLayoutProperty name="highlightsTitle"/>
                        <designLayoutProperty name="highlightsCardBackgroundColor"/>
                        <designLayoutProperty name="highlightsCardBorderColor"/>
                        <designLayoutProperty name="highlightsCardBorderRadius"/>
                        <designLayoutProperty name="highlightsCardTextColor"/>
                        <designLayoutProperty name="orderSummaryHighlightsFieldMapping"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
            <designSubstitute>commerce_my_account:orderDetailsDesignSubstitute</designSubstitute>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>