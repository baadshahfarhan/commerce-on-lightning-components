<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="text" type="String" default="Checkout" translatable="true" />
            <property name="buttonTextColor" type="Color"/>
            <property name="buttonTextHoverColor" type="Color"/>
            <property name="buttonBackgroundColor" type="Color"/>
            <property name="buttonBackgroundHoverColor" type="Color"/>
            <property name="buttonBorderColor" type="Color"/>
            <property name="buttonBorderRadius" type="Integer" min="0" max="50" default="0"/>
            <property name="variant" type="String" default="primary" datasource="java://siteforce.communitybuilder.datasource.ButtonStyleDataSource" />
            <property name="size" type="String" default="standard" datasource="java://siteforce.communitybuilder.datasource.ButtonSizeDataSource" />
            <property name="width" type="String" default="stretch" datasource="java://siteforce.communitybuilder.datasource.ButtonStretchDataSource" />
            <property name="alignment" type="String" default="center" datasource="java://siteforce.communitybuilder.datasource.DxpFormAlignmentDataSource"/>

            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutComponent name="commerce_builder:checkoutButtonDesignInfo" />
                        <designLayoutProperty name="text" />
                        <designLayoutProperty name="buttonTextColor" />
                        <designLayoutProperty name="buttonTextHoverColor" />
                        <designLayoutProperty name="buttonBackgroundColor" />
                        <designLayoutProperty name="buttonBackgroundHoverColor" />
                        <designLayoutProperty name="buttonBorderColor" />
                        <designLayoutProperty name="buttonBorderRadius" />
                        <designLayoutProperty name="variant" />
                        <designLayoutProperty name="size" />
                        <designLayoutProperty name="width" />
                        <designLayoutProperty name="alignment" />
                    </designLayoutItems>
                </designSection>
            </designLayout>
            <designSubstitute>commerce_cart:checkoutButtonDesignSubstitute</designSubstitute>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
