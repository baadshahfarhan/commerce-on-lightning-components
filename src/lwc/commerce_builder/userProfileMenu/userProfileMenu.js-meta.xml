<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Log In" name="loginLinkText" type="String" default="Log In" translatable="true"/>
            <property label="Link Color" name="loginLinkTextColor" type="Color" />
            <property label="Link Hover Color" name="loginLinkTextHoverColor" type="Color"/>
            <property label="Link Orientation" name="loginLinkTextOrientation" type="String" default="leftOfIcon" datasource="java://siteforce.communitybuilder.datasource.UserProfileTextOrientationDataSource"/>
            <property label="LoginLink Text Decoration" name="loginLinkTextDecoration" type="String" default='{"underline":true}'/>

            <property label="Menu Style for Authenticated Users" name="menuStyle" type="String" default="iconAndName" datasource="java://siteforce.communitybuilder.datasource.UserProfileMenuStyleDataSource"/>
            <property label="Include Company Name" name="includeCompanyName" default="false" type="Boolean"/>
            <property label="Icon Style" name="iconStyle" default="userIcon" type="String" datasource="java://siteforce.communitybuilder.datasource.UserProfileIconStyleDataSource"/>
            <property label="Text Orientation" name="userNameTextOrientation" type="String" default="leftOfIcon" datasource="java://siteforce.communitybuilder.datasource.UserProfileTextOrientationDataSource"/>


            <property label="Navigation Menu" name="userProfileMenuNavigationMenuEditor" type="String" />
            <property label="Log Out" name="logOutLabel" type="String" default="Log Out"  translatable="true"/>
            
        
            <designLayout>
                <designSection name="guestUserOptions">
                    <designLayoutItems>
                        <designLayoutComponent name="commerce_builder:userProfileMenuLoginLinkInfo"/>
                        <designLayoutProperty name="loginLinkText"/>
                        <designLayoutProperty name="loginLinkTextColor"/>
                        <designLayoutProperty name="loginLinkTextHoverColor"/>
                        <designLayoutProperty name="loginLinkTextOrientation"/>
                        <designLayoutProperty name="loginLinkTextDecoration"/>
                    </designLayoutItems>
                </designSection>
                <designSection name="authenticatedUserOptions">
                    <designLayoutItems>
                        <designLayoutProperty name="menuStyle"/>
                        <designLayoutProperty name="iconStyle"/>
                        <designLayoutProperty name="includeCompanyName" cbVisibleIf="menuStyle=iconAndName"/>
                        <designLayoutProperty name="userNameTextOrientation" cbVisibleIf="menuStyle=iconAndName"/>
                    </designLayoutItems>
                </designSection>
                <designSection name="authenticatedUserMenu">
                    <designLayoutItems >
                        <designLayoutComponent name="commerce_builder:userProfileMenuNavigationDesignInfo"/>
                        <designLayoutProperty name="userProfileMenuNavigationMenuEditor"/>
                        <designLayoutProperty name="logOutLabel"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
