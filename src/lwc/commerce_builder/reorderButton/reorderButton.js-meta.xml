<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
	<targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="orderSummaryId" type="String" default="{!recordId}"/>
            <property name="buttonText" type="String" default="Start Reorder"/>
            <property name="variant" type="String" default="primary" datasource="java://siteforce.communitybuilder.datasource.ButtonStyleDataSource"/>
            <property name="size" type="String" default="standard" datasource="java://siteforce.communitybuilder.datasource.ButtonSizeDataSource"/>
            <property name="width" type="String" default="standard" datasource="java://siteforce.communitybuilder.datasource.ButtonStretchDataSource"/>
            <property name="alignment" type="String" default="right"/>
            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutProperty name="orderSummaryId"/>
                        <designLayoutProperty name="variant"/>
                        <designLayoutProperty name="size"/>
                        <designLayoutProperty name="width"/>
                        <designLayoutProperty name="alignment"/>
                        <designLayoutProperty name="buttonText"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
