<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Show Heading" name="showBillingAddressHeading" type="Boolean" default="true"/>
            <property label="Heading" name="billingAddressFieldsetLegendLabel" type="String" default="Billing Address" translatable="true" />
            <property label="Use Same Address for Billing Label" name="billingAddressSameAsShippingAddressLabel" type="String" default="My billing address is the same as my shipping address" translatable="true" />
            <property label="Phone Number" name="phoneNumberLabel" type="String" default="Phone Number" translatable="true" />
            <property label="Phone Number Ghost Text" name="phoneNumberPlaceholderText" type="String" default="" translatable="true" />
            <designLayout>
                <designSection name="billingAddressForm">
                    <designLayoutItems>
                        <designLayoutProperty name="showBillingAddressHeading"/>
                        <designLayoutProperty name="billingAddressFieldsetLegendLabel"/>
                        <designLayoutProperty name="billingAddressSameAsShippingAddressLabel"/>
                        <designLayoutProperty name="phoneNumberLabel"/>
                        <designLayoutProperty name="phoneNumberPlaceholderText"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>