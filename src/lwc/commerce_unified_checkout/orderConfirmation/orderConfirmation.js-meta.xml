<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="orderConfirmation">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="headerText" type="String" label="Header Text" default="Thank you for your order!" translatable="true"></property>
            <property name="confirmationNumberText"  type="String" label="Confirmation Number Text" default="Confirmation Number" translatable="true"></property>
            <property name="bodyText"  type="String" label="Body Text" default="We will send an email with your confirmation number and receipt shortly." translatable="true"></property>
            <property name="buttonText"  type="String" label="Continue Shopping Button Text" default="Continue Shopping" translatable="true"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
