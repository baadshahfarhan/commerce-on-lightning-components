<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <!-- Credit card -->
            <property label="Heading" name="cardPaymentLabel" type="String" default="Credit Card" translatable="true" />

            <!-- Purchase order -->
            <property label="Heading" name="headerLabel" type="String" default="Purchase Order" translatable="true" />
            <property label="Purchase Order Number Field" name="inputLabel" type="String" default="Purchase Order Number" translatable="true" />
            <property label="Purchase Order Number Placeholder Text" name="placeholderLabel" type="String" default="" translatable="true" />
            <property label="Require billing address for purchase order" name="requireBillingAddress" type="Boolean" default="true"/>

            <!-- Billing address -->
            <property label="Show heading" name="showBillingAddressHeading" type="Boolean" default="true"/>
            <property label="Heading" name="billingAddressFieldsetLegendLabel" type="String" default="Billing Address" translatable="true" />
            <property label="Same Billing and Shipping Address Checkbox" name="billingAddressSameAsShippingAddressLabel" type="String" default="Same as shipping address" translatable="true" />

            <designLayout>
                <designSection name="creditCardSection">
                    <designLayoutItems>
                        <designLayoutProperty name="cardPaymentLabel"/>
                    </designLayoutItems>
                </designSection>
                <designSection name="purchaseOrderSection">
                    <designLayoutItems>
                        <designLayoutProperty name="headerLabel"/>
                        <designLayoutProperty name="inputLabel"/>
                        <designLayoutProperty name="placeholderLabel"/>
                        <designLayoutProperty name="requireBillingAddress"/>
                    </designLayoutItems>
                </designSection>
                <designSection name="billingAddressForm">
                    <designLayoutItems>
                        <designLayoutProperty name="showBillingAddressHeading"/>
                        <designLayoutProperty name="billingAddressFieldsetLegendLabel"/>
                        <designLayoutProperty name="billingAddressSameAsShippingAddressLabel"/>
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
