<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Page">
            <paletteSection>Commerce</paletteSection>
            <orgAccess>Commerce.orgHasPromotionsEnabled</orgAccess>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <designSubstitute>commerce_unified_coupons:CartAppliedCouponsDesignSubstitute</designSubstitute>
            <!-- Applied Coupons Content -->
            <property name="backgroundColor" type="Color" />

            <!-- Coupon Form -->
            <!-- Reveal Coupon Form Button -->
            <property name="showRevealCouponFormButton" type="Boolean" default="true" />
            <property name="revealCouponFormButtonText" type="String" translatable="true" default="Enter a coupon code" />
            <property name="revealCouponFormButtonTextColor" type="Color" />
            <property name="revealCouponFormButtonFontSize" type="String" datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource" default="small" />

            <!-- Input Box -->
            <property name="couponFormPlaceholderText" type="String" translatable="true" default="Enter a coupon code..." />
            <property name="couponInputBoxBorderRadius" type="String" default="4px"/>
            <property name="couponInputBoxBackgroundColor" type="Color" />
            <property name="couponInputBoxTextColor" type="Color" />

            <!-- Apply Coupon Button -->
            <property name="applyCouponButtonText" type="String" translatable="true" default="Apply" />
            <property name="applyCouponButtonTextColor" type="Color" />
            <property name="applyCouponButtonTextHoverColor" type="Color" />
            <property name="applyCouponButtonBackgroundColor" type="Color" />
            <property name="applyCouponButtonBackgroundHoverColor" type="Color" />
            <property name="applyCouponButtonBorderColor" type="Color" />
            <property name="applyCouponButtonBorderRadius" type="String" default="4px"/>

            <!-- Applied Coupons Summary -->
            <property name="appliedCouponsFontSize" type="String" datasource="java://siteforce.communitybuilder.datasource.SLDSFontSizeDataSource" default="medium" />
            <property name="appliedCouponsTextColor" type="Color" />

            <!-- Terms and Conditions -->
            <property name="showTermsAndConditions" type="Boolean" default="true" />
            <property name="termsAndConditionsTitleText" type="String" translatable="true" default="Terms and Conditions" />

            <designLayout>
                <designSection>
                    <designLayoutItems>
                        <designLayoutProperty name="backgroundColor" />
                    </designLayoutItems>
                </designSection>
                <designSection name="couponForm">
                    <designLayoutItems>
                        <designLayoutProperty name="showRevealCouponFormButton" />
                        <designLayoutProperty name="revealCouponFormButtonText" cbVisibleIf="showRevealCouponFormButton"/>
                        <designLayoutProperty name="revealCouponFormButtonTextColor" cbVisibleIf="showRevealCouponFormButton"/>
                        <designLayoutProperty name="revealCouponFormButtonFontSize" cbVisibleIf="showRevealCouponFormButton"/>
                        <designLayoutProperty name="couponFormPlaceholderText"/>
                        <designLayoutProperty name="couponInputBoxTextColor"/>
                        <designLayoutProperty name="couponInputBoxBackgroundColor"/>
                        <designLayoutProperty name="couponInputBoxBorderRadius"/>
                        <designLayoutProperty name="applyCouponButtonText"/>
                        <designLayoutProperty name="applyCouponButtonTextColor"/>
                        <designLayoutProperty name="applyCouponButtonTextHoverColor"/>
                        <designLayoutProperty name="applyCouponButtonBackgroundColor"/>
                        <designLayoutProperty name="applyCouponButtonBackgroundHoverColor"/>
                        <designLayoutProperty name="applyCouponButtonBorderColor"/>
                        <designLayoutProperty name="applyCouponButtonBorderRadius"/>
                    </designLayoutItems>
                </designSection>
                <designSection name="couponsSummary">
                    <designLayoutItems>
                        <designLayoutProperty name="appliedCouponsFontSize"/>
                        <designLayoutProperty name="appliedCouponsTextColor"/>
                    </designLayoutItems>
                </designSection>
                <designSection name="termsAndConditions">
                    <designLayoutItems>
                        <designLayoutProperty name="showTermsAndConditions" />
                        <designLayoutProperty name="termsAndConditionsTitleText" cbVisibleIf="showTermsAndConditions" />
                    </designLayoutItems>
                </designSection>
            </designLayout>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
