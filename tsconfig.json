{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "rootDir": "src",
        "experimentalDecorators": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "target": "es2020",
        "isolatedModules": true,
        "skipLibCheck": true,
        "baseUrl": ".",
    },
    "include": ["src/lwc"],
    "exclude": ["/dist/"]
}
